<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_contact_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#1976D2"
    tools:context="com.first.app.barcodescanner.Activities.ContactUsActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/googlelogo"
        app:civ_border_color="#000000"
        android:id="@+id/gmailImage"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/linkedinImage"
        android:layout_alignStart="@+id/linkedinImage" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/facebooklogo"
        app:civ_border_color="#000000"
        android:id="@+id/faceImage"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linkedin Account"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:textColor="#ffffff"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/linkedinTextview"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/facebookTextview"
        android:layout_alignStart="@+id/facebookTextview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google Account"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:textColor="#ffffff"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/gmailTextview"
        android:layout_alignBottom="@+id/gmailImage"
        android:layout_alignLeft="@+id/linkedinTextview"
        android:layout_alignStart="@+id/linkedinTextview"
        android:layout_marginBottom="16dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/linkedinlogo"
        app:civ_border_color="#000000"
        android:id="@+id/linkedinImage"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/faceImage"
        android:layout_alignStart="@+id/faceImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook Account"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:textColor="#ffffff"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginBottom="26dp"
        android:id="@+id/facebookTextview"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignBottom="@+id/faceImage"
        android:layout_toRightOf="@+id/faceImage"
        android:layout_toEndOf="@+id/faceImage" />

</RelativeLayout>
